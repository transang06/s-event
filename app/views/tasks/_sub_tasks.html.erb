<div class="list-group">
  <% sub_tasks.each do |sub_task| %>
    <%= link_to event_task_path(event_id: @event || 1, id: sub_task), class:"list-group-item list-group-item-action", 
      "aria-current":"true", remote: true do %>
      <div class="d-flex w-100 justify-content-between align-items-center">
        <div class="col-2 fw-bold"><%= sub_task.id.to_s + "-" + sub_task.name %></div>
        <div class="progress col-8">
          <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" 
            style="width: <%= sub_task.progress || 0 %>%;" 
            aria-valuenow="<%= sub_task.progress || 0 %>" 
            aria-valuemin="0" aria-valuemax="100">
            <%= sub_task.progress || 0 %>%
          </div>
        </div>
        <small class="col-1 ps-3"><%= time_ago_in_words sub_task.created_at %></small>
      </div>
    <% end %>
  <% end %>
</div>
